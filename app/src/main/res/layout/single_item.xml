<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="1dp">

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Image Loading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Name"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/main_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Class"
            android:visibility="visible" />

        <TextView
            android:id="@+id/main_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Cost"
            android:visibility="visible" />

        <TextView
            android:id="@+id/main_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="410dp"
            android:layout_marginLeft="410dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="410dp"
            android:layout_marginRight="410dp"
            android:layout_marginBottom="41dp"
            android:text="ID"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/main_flavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="flavor"
            tools:text="flavor"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/main_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            tools:text="description"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>